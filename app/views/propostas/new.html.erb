<div class="container">

      <div class="starter-template">
        <h1>Rapidoo Code Challenge</h1>

        <% if @proposta.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <h2>
            <%= pluralize(@proposta.errors.count, "erro") %> não deixaram essa proposta ser enviada:
          </h2>
          
            <% @proposta.errors.full_messages.each do |msg| %>
              <p><%= msg %></pp>
            <% end %>
          
        </div>
      <% end %>


  <%= form_with scope: :proposta, url: propostas_path, local: true do |form| %>

  <div class="form-group">
    <%= form.label "Nome" %><br>
    <%= form.text_field  :nome %>
  </div>

  <div class="form-group">
    <%= form.label "Nome da Empresa" %><br>
    <%= form.text_field :nomedaempresa %>
  </div>

  <div class="form-group">
    <%= form.label "E-mail" %><br>
    <%= form.text_field :email %>
  </div>

  <div class="form-group">
    <%= form.label :faturamento %><br>
    <%= form.text_field :faturamento, as: :currency, currency: "R$", placeholder: 'Faturamento da empresa' %>
  </div>

  <div class="form-group">
    <%= form.label "Valor do título" %><br>
    <%= form.text_field :valordotitulo, placeholder: 'Valor do título (Mínimo: R$500)', error: "O valor informado deve ser maior que 500 reais" %>
  </div>

  <div class="form-group">
    <%= form.label "Prazo (em dias)" %><br>
    <%= number_field(:proposta, :prazo, min: 0, step: 1.0) %>
    
  </div>

  <div class="form-group">
    <%= form.submit "Enviar proposta" , class: 'btn btn-primary' %>
  </div>

  <% end %>

</div>
